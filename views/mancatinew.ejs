                                    <form class="js-validation-signup" action="/mancatinew" method="POST">
                                        <div class="py-3">
                                            <div class="mb-4">
                                                <label class="form-label" for="utente">Seleziona utente<span
                                                        class="text-danger">*</span></label>
                                                <select class="js-select2 form-select" id="clienti" name="utente"
                                                    style="width: 100%;" data-placeholder="Scegli utente">
                                                    <option></option>
                                                    <!-- Required for data-placeholder attribute to work with Select2 plugin -->
                                                    <% rows.forEach(function(row){ %>
