                                                                <%= group.titolo %>
                                                            </option>
                                                            <% }) %>
                                                    </select>
                                                </div>

                                            </div>
                                            <div class="mb-4">
                                                <input type="text" class="form-control form-control-lg form-control-alt"
                                                    id="eta" name="eta" placeholder="Età">
                                            </div>
                                            <div class="mb-4">
                                                <input type="text" class="form-control form-control-lg form-control-alt"
                                                    id="anzianitalavorativa" name="anzianitalavorativa"
                                                    placeholder="Anzianità Lavorativa">
                                            </div>
                                            <div class="mb-4">
                                                <input type="text" class="form-control form-control-lg form-control-alt"
                                                    id="nite" name="note" placeholder="Note">
                                            </div>

                                            <label class="col-md-3 control-label" style="text-align: left;">Inabilità
                                                temporanea:</label>
                                            <div class="col-md-9">
                                                <label class="col-md-3 control-label" style="width: auto;">
                                                    <strong>
                                                        <input id="ctl00_ContentPlaceHolder1_CHK_INA_TEMP"
                                                            type="checkbox"
                                                            name="ctl00$ContentPlaceHolder1$CHK_INA_TEMP">
                                                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                                        <input name="ctl00$ContentPlaceHolder1$TXT_GG_ASSENZA"
                                                            type="text" id="ctl00_ContentPlaceHolder1_TXT_GG_ASSENZA"
