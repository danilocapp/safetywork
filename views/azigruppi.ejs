<%- include('partials/header') %>
    <!-- Main Container -->
    <main id="main-container">
        <!-- Page Content -->
        <div class="content content-boxed">
            <div class="row">
                <div class="col-md-6 col-xl-6">
                    <form action="/gruppipublic" method="POST">
                        <div class="mb-4">
                            <label class="form-label" for="example-text-input">Titolo</label>
                            <input type="text" class="form-control" id="titolo" name="titolo"
                                placeholder="Inserisci titolo gruppo di lavoro">
                        </div>
                        <div class="mb-4">
                            <label class="form-label" for="example-email-input">Sottotitolo</label>
                            <input type="text" class="form-control" id="sottotitolo" name="sottotitolo"
                                placeholder="Inserisci sottotitolo gruppo di lavoro">
                        </div>
                        <div class="mb-4">
                            <label class="form-label" for="idazienda">A quale azienda aggiungere il gruppo<span
                                class="text-danger">*</span></label>
                            <select class="js-select2 form-select" id="idazienda" name="idazienda" style="width: 100%;"
                              data-placeholder="Scegli utente">
                              <option></option>
                              <% aziende.forEach(function(azienda){ %>
                                <option value="<%= azienda.id %>">
                                  <%= azienda.ragionesociale %>
                                </option>
                                <% }) %>
                            </select>
                          </div>
                        <div class="col-md-6 col-xl-5">
                            <button type="submit" class="btn w-200 btn-alt-success">
                                Aggiorna gruppi
                            </button>
                        </div>

                    </form>
                </div>
                <div class="col-md-6 col-xl-6">
                    <form action="/userstruttura" method="POST">
                        <div class="mb-4">
                            <label class="form-label" for="utente">Seleziona utente da aggiungere<span
                                    class="text-danger">*</span></label>
                            <select class="js-select2 form-select" id="utente" name="utente" style="width: 100%;"
                                data-placeholder="Scegli utente">
                                <option></option>
                                <!-- Required for data-placeholder attribute to work with Select2 plugin -->
                                <% users.forEach(function(user){ %>
                                    <option value="<%= user.name %>">
                                        <%= user.name %>
                                    </option>
                                    <% }) %>
                            </select>
                        </div>
                        <div class="mb-4">
                            <label class="form-label" for="utente">Seleziona gruppo dove aggiungerlo<span
                                    class="text-danger">*</span></label>
                            <select class="js-select2 form-select" id="gruppo" name="gruppo" style="width: 100%;"
                                data-placeholder="Scegli utente">
                                <option></option>
                                <!-- Required for data-placeholder attribute to work with Select2 plugin -->
                                <% groups.forEach(function(group){ %>
                                    <option value="<%= group.titolo %>">
                                        <%= group.titolo %>
                                    </option>
                                    <% }) %>
                            </select>
                        </div>
            
                        <div class="col-md-6 col-xl-5">
                            <button type="submit" class="btn w-200 btn-alt-success">
                                Aggiungi utente
                            </button>
                        </div>
            
                    </form>
                </div>
            </div>
            <!-- END Page Content -->
    </main>
    <!-- END Main Container -->

    <%- include('partials/footer') %>