<%- include('partials/header') %>
  <!-- Main Container -->
  <main id="main-container">

    <!-- Page Content -->
    <div class="hero-static d-flex align-items-center">
      <div class="content">
        <div class="row justify-content-center push">
          <div class="col-md-8 col-lg-8 col-xl-8">
            <!-- Sign Up Block -->
            <div class="block block-rounded mb-0">
              <div class="block-header block-header-default">
                <h3 class="block-title">Crea account</h3>
              </div>
              <div class="block-content">
                <div class="p-sm-3 px-lg-4 px-xxl-5 py-lg-5">
                  <h1 class="h2 mb-1">Federterziaria</h1>
                  <p class="fw-medium text-muted">
                    Per favore completa i dettagli sotto per registrare l'utente!
                  </p>

                  <!-- Sign Up Form -->
                  <!-- jQuery Validation (.js-validation-signup class is initialized in js/pages/op_auth_signup.min.js which was auto compiled from _js/pages/op_auth_signup.js) -->
                  <!-- For more info and examples you can check out https://github.com/jzaefferer/jquery-validation -->
                  <form class="js-validation-signup" action="/register" method="POST">
                    <div class="py-3">
                      <div class="mb-4">
                        <input type="text" class="form-control form-control-lg form-control-alt" id="signup-username"
                          name="fname" placeholder="Nome e Cognome">
                      </div>
                      <div class="mb-4">
                        <input type="email" class="form-control form-control-lg form-control-alt" id="signup-email"
                          name="email" placeholder="Email">
                      </div>
                      <div class="mb-4">
                        <input type="text" class="form-control form-control-lg form-control-alt" id="mansione"
                          name="mansione" placeholder="Mansione">
                      </div>
                      <div class="mb-4">
                        <input type="text" class="form-control form-control-lg form-control-alt" id="sedeoperativa"
                          name="sedeoperativa" placeholder="Sede operativa">
                      </div>
                      <div class="mb-4">
                        <input type="text" class="form-control form-control-lg form-control-alt" id="matricola"
                          name="matricola" placeholder="Codice di matricola">
                      </div>
                      <div class="mb-4">
                        <input type="text" class="form-control form-control-lg form-control-alt" id="cellulare"
                          name="cellulare" placeholder="Cellulare">
                      </div>
                      <div class="mb-4">
                        <input type="date" class="form-control form-control-lg form-control-alt" id="datadinascita"
                          name="datadinascita" placeholder="Data di nascita">
                      </div>
                      <div class="mb-4">
                        <input type="text" class="form-control form-control-lg form-control-alt" id="luogodinascita"
                          name="luogodinascita" placeholder="Luogo di nascita">
                      </div>
                      <div class="mb-4">
                        <input type="text" class="form-control form-control-lg form-control-alt" id="cf"
                          name="cf" placeholder="Codice Fiscale">
                      </div>
                      <div class="mb-4">
                        <input type="password" class="form-control form-control-lg form-control-alt" id="password"
                          name="password" placeholder="Password">
                      </div>
                      <div class="mb-4">
                        <label class="form-label" for="idazienda">A quale azienda aggiungere l'utente<span
                            class="text-danger">*</span></label>
                        <select class="js-select2 form-select" id="idazienda" name="idazienda" style="width: 100%;"
                          data-placeholder="Scegli utente">
                          <option></option>
                          <!-- Required for data-placeholder attribute to work with Select2 plugin -->
                          <% rows.forEach(function(row){ %>
                            <option value="<%= row.id %>">
                              <%= row.ragionesociale %>
                            </option>
                            <% }) %>
                        </select>
                      </div>
                      <div class="mb-4">
                        <label class="form-label" for="role">Ruolo utente registrato <span
                            class="text-danger">*</span></label>
                        <select class="js-select2 form-select" id="role" name="role" style="width: 100%;"
                          data-placeholder="Scegli il livello dell'utente">
                          <option></option><!-- Required for data-placeholder attribute to work with Select2 plugin -->
                          <option value="Admin">Admin</option>
                          <option value="Utente">Utente</option>
                        </select>
                      </div>

                    </div>

                    <!-- <div class="dropdown">
                          <button type="button" class="btn btn-alt-primary dropdown-toggle"
                            id="dropdown-default-alt-primary" data-bs-toggle="dropdown" aria-haspopup="true"
                            aria-expanded="false">
                            Livello Accesso
                          </button>
                          <div class="dropdown-menu fs-sm" aria-labelledby="dropdown-default-alt-primary">
                            <a class="dropdown-item" href="javascript:void(0)">Admin</a>
                            <a class="dropdown-item" href="javascript:void(0)">Azienda</a>
                            <a class="dropdown-item" href="javascript:void(0)">Utente</a>
                          </div>
                        </div> -->

                    <!--<div class="mb-4">
                            <input type="password" class="form-control form-control-lg form-control-alt" id="signup-password-confirm" name="signup-password-confirm" placeholder="Confirm Password">
                          </div>-->
                    <div class="mb-4">
                    </div>
                </div>
                <div class="row mb-4">
                  <div class="col-md-6 col-xl-5">
                    <button type="submit" class="btn w-200 btn-alt-success">
                      Registra utente
                    </button>
                  </div>
                </div>
                </form>
                <!-- END Sign Up Form -->
              </div>
            </div>
          </div>
          <!-- END Sign Up Block -->
        </div>
      </div>
    </div>
    </div>
    <!-- END Page Content -->
  </main>
  <!-- END Main Container -->
  <%- include('partials/footer') %>