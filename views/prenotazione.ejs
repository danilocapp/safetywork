<%- include('partials/header') %>
    <!-- Main Container -->
    <main id="main-container">
        <!-- Page Content -->
        <div class="content content-boxed">
            
            <div style="padding: 100px 20px;">
                <label class="form-label" for="idazienda">A quale azienda vuoi prenotare il corso?</label>
                <select class="js-select2 form-select" id="idazienda" name="idazienda" style="width: 100%; "onChange="window.location.href=this.value"
                  data-placeholder="Scegli utente">
                  <option></option>
                  <!-- Required for data-placeholder attribute to work with Select2 plugin -->
                  <% aziende.forEach(function(azienda){ %>
                    <option value="/prenotazione:<%= azienda.id %>">
                      <%= azienda.ragionesociale %>
                    </option>
                    <% }) %>
                </select>
            </div>
            <div class="row">
                <div class="col-md-6 col-xl-6">
                    <form action="/prenotazione" method="POST">
                        <div class="mb-4">
                            <label class="form-label" for="idutente">Seleziona utente da aggiungere<span
                                    class="text-danger">*</span></label>
                            <select class="js-select2 form-select" id="idutente" name="idutente" style="width: 100%;"
                                data-placeholder="Scegli utente">
                                <option></option>
                                <!-- Required for data-placeholder attribute to work with Select2 plugin -->
                                <% users.forEach(function(user){ %>
                                    <option value="<%= user.id %>">
                                        <%= user.name %>
                                    </option>
                                    <% }) %>
                            </select>
                        </div>
                        <div class="mb-4">
                            <label class="form-label" for="idcorso">Seleziona il corso dove aggiungerlo<span
                                    class="text-danger">*</span></label>
                            <select class="js-select2 form-select" id="idcorso" name="idcorso" style="width: 100%;"
                                data-placeholder="Scegli corso">
                                <option></option>
                                <!-- Required for data-placeholder attribute to work with Select2 plugin -->
                                <% corsi.forEach(function(corso){ %>
                                    <option value="<%= corso.id %>">
                                        <%= corso.nome %>
                                    </option>
                                    <% }) %>
                            </select>
                        </div>
            
                        <div class="col-md-6 col-xl-5">
                            <button type="submit" class="btn w-200 btn-alt-success">
                                Prenota
                            </button>
                        </div>
            
                    </form>
                </div>
                
            </div>
            <!-- END Page Content -->
    </main>
    <!-- END Main Container -->

    <%- include('partials/footer') %>