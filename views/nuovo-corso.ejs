<%- include('partials/header') %>

  <!-- Main Container -->
  <main id="main-container">

    <!-- Page Content -->
    <div class="hero-static d-flex align-items-center">
      <div class="content">
        <div class="row justify-content-center push">
          <div class="col-md-12">
            <!-- Sign Up Block -->
            <div class="block block-rounded mb-0">
              <div class="block-header block-header-default">
                <h3 class="block-title">Crea nuovo corso</h3>
                <div class="block-options">
                  <a class="btn-block-option fs-sm" href="javascript:void(0)" data-bs-toggle="modal"
                    data-bs-target="#one-signup-terms">Vedi termini</a>

                </div>
              </div>
              <div class="block-content">
                <h1 class="h2 mb-1">Federterziaria</h1>
                <p class="fw-medium text-muted">
                  Completa il form con le informazioni del corso!
                </p>

                <!-- Sign Up Form -->
                <!-- jQuery Validation (.js-validation-signup class is initialized in js/pages/op_auth_signup.min.js which was auto compiled from _js/pages/op_auth_signup.js) -->
                <!-- For more info and examples you can check out https://github.com/jzaefferer/jquery-validation -->
                <form class="js-validation-signup" action="/nuovo-corso" method="POST">
                  <div class="py-3">
                    <div class="row">
                      <div class="col-6">

                        <div class="mb-4">
                          <input type="text" class="form-control form-control-lg form-control-alt" id="matricola"
                            name="matricola" placeholder="Matricola">
                        </div>
                      </div>
                      <div class="col-6">

                        <div class="mb-4">
                     
                        </div>
                      </div>
                      <div class="col-3">
                        <div class="mb-4">
                          <input type="text" class="form-control form-control-lg form-control-alt" id="nome" name="nome"
                            placeholder="Nome">
                        </div>
                      </div>
                      <div class="col-3">
                        <div class="mb-4">
                          <input type="text" class="form-control form-control-lg form-control-alt" id="orecorso"
                            name="orecorso" placeholder="Ore Corso">
                        </div>
                      </div>
                      <div class="col-3">
                        <div class="mb-4">
                          <input type="text" class="form-control form-control-lg form-control-alt" id="teoria"
                            name="teoria" placeholder="Teoria">
                        </div>
                      </div>
                      <div class="col-3">
                        <div class="mb-4">
                          <input type="text" class="form-control form-control-lg form-control-alt" id="pratica"
                            name="pratica" placeholder="Pratica">
                        </div>
                      </div>
                      <div class="col-3">
                        <div class="mb-4">
                          <input type="text" class="form-control form-control-lg form-control-alt" id="numerosessioni"
                            name="numerosessioni" placeholder="Numero Sessioni">
                        </div>
                      </div>
                      <div id="container">
                        <div class="row" id="sessionerow">
                          <h3>Sessioni</h3>
                          <div class="col-3">
                            <h4>1</h4>
                          </div>
                          <div class="col-3">
                            <div class="mb-4">
                              <input type="text" class="form-control form-control-lg form-control-alt" id="dove"
                                name="dove0" placeholder="Dove">
                            </div>
                          </div>
                          <div class="col-3">
                            <div class="mb-4">
                              <input type="text" class="form-control form-control-lg form-control-alt" id="docente"
                                name="docente0" placeholder="Docente">
                            </div>
                          </div>
                          <div class="col-3">
                            <div class="mb-4">
                              <input type="text" class="form-control form-control-lg form-control-alt" id="validita"
                                name="validita0" placeholder="Validità">
                            </div>
                          </div>
                        </div>
                        <button id="btnup" class="btn w-20 btn-alt-success" type="button" style="margin: 20px;">Aggiungi sessione</button>
                      </div>
                    </div>

                    <!--<div class="mb-4">
                          <input type="password" class="form-control form-control-lg form-control-alt" id="signup-password-confirm" name="signup-password-confirm" placeholder="Confirm Password">
                        </div>-->
                  </div>
                  <div class="row mb-4">
                    <div class="col-md-12 col-xl-12">
                      <button type="submit" class="btn w-100 btn-alt-success">
                        CREA CORSO
                      </button>
                    </div>
                  </div>
                </form>
                <!-- END Sign Up Form -->
              </div>
            </div>
            <!-- END Sign Up Block -->
          </div>
        </div>
      </div>


    </div>
    <!-- END Page Content -->
  </main>
  <!-- END Main Container -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
  <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" />
  <script>
    var count = 1;
    $("#btnup").click(function () {

      $("#container").append(addNewRow(count));
      count++;
    });
      function addNewRow(count) {
        var newrow = '<div class="row" id="sessionerow">' +
          '<div class="col-3"><h4>'+String(count)+'</h4></div>'+
          '<div class="col-3">' +
          '<div class="mb-4">' +
          ' <input type="text" class="form-control form-control-lg form-control-alt" id="dove" name="dove'+String(count)+'" placeholder="Dove'+String(count)+'">' +
          '</div>' +
          '</div>' +
          '<div class="col-3">' +
          '<div class="mb-4">' +
          '<input type="text" class="form-control form-control-lg form-control-alt" id="docente" name="docente'+String(count)+'" placeholder="Docente'+String(count)+'">' +
          '</div>' +
          '</div>' +
          '<div class="col-3">' +
          '<input type="text" class="form-control form-control-lg form-control-alt" id="validita" name="validita'+String(count)+'" placeholder="Validità'+String(count)+'">' +
          '</div>' +
          '</div>' +
          '</div>' ;
      return newrow;
      }
  </script>

  <%- include('partials/footer') %>